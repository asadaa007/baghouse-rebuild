# Firebase Configuration
# Get these values from your Firebase Console (https://console.firebase.google.com/)
# Go to Project Settings > General > Your apps > Web app

VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Optional: Firebase Analytics (if you want to use it)
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# App Configuration
VITE_APP_NAME=Frost Emission
VITE_APP_URL=http://localhost:5180
VITE_ADMIN_EMAIL=admin@frostemission.com

# Contact Form Configuration
VITE_CONTACT_EMAIL=contact@frostemission.com
VITE_SUPPORT_EMAIL=support@frostemission.com

# External Services (if needed later)
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Development/Production Flags
VITE_NODE_ENV=development
VITE_DEBUG_MODE=true
